%header
  =link_to root_path, class: "header-logo" do
    .header-left
      .logo PATREON
  .header-right
    .header-right__links
      %ul.header-right__links
        - if user_signed_in?
          %li
            .icon#modal-icon=fa_icon "bars"
          %li
            = link_to home_path do
              .icon=fa_icon "home"
          %li
            .creator-search-box
              %label
                .search-icon=fa_icon "search"
                %input{type: "text", id: "creator-search-field", name: "keyword", placeholder: "Search"}
            .user-search-result
        -else
          %li
            =link_to "Log In", new_user_session_path
          %li
            =link_to "Sign Up", new_user_registration_path
          %li
            =link_to "Explore Creator", "#"
          %li
            =link_to "Start My Page", "#"
    .search-box
  - if user_signed_in?
    .menu-modal
      %ul
        -if current_user.creator
          =link_to "#", class: "modal-link" do
            %li EXPLORE CREATORS
          =link_to "#", class: "modal-link" do
            %li YOUR PLEDGES
          =link_to "#", class: "modal-link" do
            %li HELP CENTER
          =link_to destroy_user_session_path, method: :delete, class: "modal-link" do
            %li LOG OUT
        -else
          =link_to "#", class: "modal-link" do
            %li FINISH PAGE
          =link_to "#", class: "modal-link" do
            %li EXPLORE CREATORS
          =link_to "#", class: "modal-link" do
            %li YOUR PROFILE
          =link_to "#", class: "modal-link" do
            %li YOUR PLEDGES
          =link_to settings_profile_path, class: "modal-link" do
            %li SETTING
          =link_to "#", class: "modal-link" do
            %li HELP CENTER
          =link_to destroy_user_session_path, method: :delete, class: "modal-link" do
            %li LOG OUT
