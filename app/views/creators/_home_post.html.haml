- @posts.each do |post|
  .post
    .post__header
      .post-avatar
        = image_tag post.creator.user.avatar_image.to_s
      .name-and-time
        .post-name
          %h3
            =post.creator.user.name
        .post-time
          =post.created_at.strftime('%b %d at %I:%M%p')
      .public-option
        Patreons only
      .clear
    .post__content
      .post__content__title
        %h4
          =post.title
      .post__content__body
        =post.body
      .post__content__btn
        %ul
          -if current_user.creator && current_user.creator.id == post.creator_id
            %li
              =link_to "/posts/text/#{post.id}/edit/#{post.types}" do
                =fa_icon "pencil"
            %li
              =link_to post_path(post.id), method: :delete, data: {confirm: "Are you sure you want to delete this post? "} do
                =fa_icon "trash-o"
    .clear
