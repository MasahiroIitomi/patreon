=render partial: "sidebar"
.user-main-contents
  .user-main-contents__wrapper
    .inner-container

      .left-contents
        .user
          - if current_user.creator
            .user__image{style: "background: url(#{image_path current_user.creator.cover_image}); background-size: cover;"}
              .user__image__avatar
                = image_tag current_user.avatar_image.to_s
          - else
            .user__image
              .user__image__avatar
                = image_tag current_user.avatar_image.to_s
          .user__info
            %h3=current_user.name
            -if current_user.creator
              %p
                is creating
                =current_user.creator.creating_things
          .user__supporting
            .title
              %h3 SUPPORTING
            .supporting-creator
              .avatar
              .creators-info
                .creator-name
                  %h4 Creator's name
                .pledge-info
                  %p $10 per creation
          .user__following
            .title
              %h3 FOLLOWING
            .following-creators
              .avatar
              .creator-name
                %h4 Creator's name

      .center-contents
        .center-contents__header
          .tab-all All posts
          .tab-patron-only Patron-only posts
          .tab-select

        .center-contents__posts
          .post
            .post-wrapper
              .header
                .avatar
                .creators-info
                  .creator-name
                    %h4 Creator's name
                  .post-time
                    %p Nov 21 at 10:10am
                .public
                  %p public
              .content
                .post-title
                  %h4 Post Title
                .post-body
                  hoge hoge hoge hoge hoge hoge hoge hoge hoge hoge hoge hoge hoge hoge hoge hoge hoge hoge hoge hoge
                .content-bottom
                  .likes-count
                  .share-btn
                  .like-btn

      .right-contents
        .find-creators
          .find-creators-wrapper
            .title
              %h5 FIND CREATORS YOU LOVE
            .content
              %p The creators you already love may be on Patreon â€“ connect your social media to find them.
            =link_to "#" do
              .link FIND CREATORS
      .clear
  =render partial: "layouts/footer"
