.user_administration_wrapper
  %h2 Sign Up
  .content
    = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
      = devise_error_messages!
      .field
        .field__icon
          = fa_icon "user"
        .field__form
          =f.text_field :name, autofocus: true, placeholder:"Full Name"
      .field
        .field__icon
          =fa_icon "envelope"
        .field__form
          = f.email_field :email, autofocus: true, placeholder:"Email"
      .field
        .field__icon
          = fa_icon "key"
        .field__form
          = f.password_field :password, autocomplete: "off", placeholder:"Password"
      .field
        .field__icon
          = fa_icon "key"
        .field__form
          = f.password_field :password_confirmation, autocomplete: "off", placeholder:"Confirm Password"
      .link
        = f.submit "SIGN UP" ,class: "link-signup"
      .link-login
        = link_to "Log in", new_user_session_path, class: "login-btn"
  .empty-background
=render partial: "layouts/footer"
